@model List<Web.Models.CategoryDto>
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.Title = "Categories";
}

<div class="row">
    <div class="col-sm-12">
        <h4>Categories</h4>
        <ul class="list-group list-group-flush">
            @foreach (var item in Model)
            {
                <li class="list-group-item list-group-item-action">@item.CategoryID. @item.CategoryName</li>
            }
        </ul>
    </div>
</div>


@if (HttpContextAccessor.HttpContext.Session.GetInt32("CurrentUserRole") == 1)
{
    <div class="row mt-4">
        <div class="col-sm-12">
            <h4>Add New Category</h4>
            <form asp-action="CreateCategory" method="post">
                <div class="form-group">
                    <label for="CategoryName">Category Name</label>
                    <input type="text" class="form-control" id="CategoryName" name="CategoryName" required />
                </div>
                <button type="submit" class="btn btn-primary mt-2">Add Category</button>
            </form>
        </div>
    </div>
}
<script>
    // Optionally, add some JavaScript here for additional functionality
</script>
